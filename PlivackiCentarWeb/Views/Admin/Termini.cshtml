@model List<PlivackiCentarWeb.Models.TerminViewModel>
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Termini</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Index">Admin</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Termini</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Termini</h5>
                    <div class="ibox-tools">
                        <a class="btn btn-primary float-right m-t-n-xs" href="/Admin/NoviTermin"><i class="fa fa-plus"></i><strong> Novi termin</strong></a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Datum</th>
                                    <th>Vrijeme</th>
                                    <th>Naziv bazena</th>
                                    <th>Trener</th>
                                    <th>Grupa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var termin in Model)
                                {
                                <tr>
                                    <td>@termin.Datum.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@termin.VrijemeOd @termin.VrijemeDo</td>
                                    <td>@termin.Bazen.Naziv</td>
                                    <td>@termin.Trener.Ime @termin.Trener.Prezime</td>
                                    <td class="center">@termin.Grupa.Uzrast</td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Datum</th>
                                    <th>Vrijeme</th>
                                    <th>Naziv bazena</th>
                                    <th>Trener</th>
                                    <th>Grupa</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/assets/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/assets/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/assets/js/inspinia.js"></script>
    <script src="~/assets/js/plugins/pace/pace.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });

    </script>
}